<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.ViewWorkstation2"
            prefHeight="600.0" prefWidth="900.0" styleClass="add-parts-popup">

    <top>
        <GridPane styleClass="parts-title-container" hgap="355">
            <Label text="Workstation" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" onAction="#onClosePopupButton" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="2" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER">
            <VBox spacing="20" styleClass="create-product-scrollpane" VBox.vgrow="ALWAYS">
                <VBox spacing="10" >

                    <HBox maxWidth="Infinity">
                        <Label text="Workstation Parts" styleClass="parts-table-title"/>
                    </HBox>
                    <HBox maxWidth="Infinity" alignment="CENTER_RIGHT" spacing="10">
                        <Button text="Refresh Table" onAction="#refreshTableButton" styleClass="create-product-button-refresh-button"/>
                        <Button fx:id="sendRequest" text="Request Stock Transfer" onAction="#createPartRequest" styleClass="create-product-button-refresh-button"/>
                    </HBox>

                    <VBox maxWidth="Infinity" VBox.vgrow="ALWAYS" styleClass="dynamic-vbox" >
                        <TableView fx:id="wsPartTable"  prefHeight="200.0" prefWidth="580.0" styleClass="products-table" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colWSPartId" text="Part ID"/>
                                <TableColumn fx:id="colWSPartName" text="Part Name"/>
                                <TableColumn fx:id="colWSPartQuantity" text="Quantity"/>
                                <TableColumn fx:id="colAddPart" maxWidth="140"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
