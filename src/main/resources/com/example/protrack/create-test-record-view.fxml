<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.CreateTestRecordController"
            prefHeight="360.0" prefWidth="600.0" styleClass="add-parts-popup">

    <top>
        <GridPane styleClass="parts-title-container" hgap="168">
            <Label text="Test Record Creation" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" onAction="#onClosePopupButton" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="2" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER">
            <VBox spacing="20" styleClass="create-product-scrollpane" VBox.vgrow="ALWAYS" GridPane.hgrow="ALWAYS">
                <padding>
                    <Insets topRightBottomLeft="5"/>
                </padding>
                <VBox spacing="10" maxWidth="Infinity">
                    <Label text="Create Test Record Steps" styleClass="parts-table-title"/>
                    <VBox fx:id="testRecordsVBox" spacing="10"/>
                </VBox>
                <HBox alignment="TOP_CENTER">
                    <Button fx:id="addTestRecordButton" text="Add Additional Test Record" onAction="#addTestRecord" styleClass="create-product-button-small" HBox.hgrow="ALWAYS"/>
                </HBox>
            </VBox>
        </ScrollPane>
    </center>
    <bottom>
        <VBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="createProductButton" text="Create Product" onAction="#onCreateProductButton" styleClass="create-product-button"/>
        </VBox>
    </bottom>
</BorderPane>
