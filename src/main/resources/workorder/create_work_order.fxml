<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.workorderproducts.CreateWorkOrderController"
            prefHeight="800.0" prefWidth="900.0" styleClass="add-parts-popup">

    <top>
        <Region minHeight="20"/>
        <GridPane styleClass="parts-title-container" hgap="345">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <Label text="Create Work Order" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" GridPane.halignment="RIGHT" onAction="#onClosePopupButton"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <VBox spacing="20">
            <Region minWidth="10"/>
            <GridPane hgap="10" vgap="20" alignment="CENTER" styleClass="parts-grid-pane">
                <columnConstraints>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="3"/>
                    <ColumnConstraints percentWidth="18"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>

                <!-- Customer Information -->
                <Label text="Customer" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="parts-table-title"/>
                <Label text="Customer:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <ComboBox fx:id="customerComboBox" promptText="Select Customer" maxWidth="700" GridPane.columnIndex="1" GridPane.rowIndex="1" onAction="#populateCustomerFields"/>
                <Label text="Address:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="addressField" promptText="Address" maxWidth="700" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Email:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="emailField" promptText="Email" maxWidth="700" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="Phone Number:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="phoneField" promptText="Phone Number" maxWidth="700" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <!-- Shipping Information -->
                <Label text="Shipping" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="parts-table-title"/>
                <Label text="Shipping Method:" styleClass="parts-table-label" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <ComboBox fx:id="shippingMethodCombo" promptText="Shipping Method:" maxWidth="700" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <Label text="Shipping Address:" styleClass="parts-table-label" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <TextField fx:id="shippingAddressField" promptText="Shipping Address" maxWidth="700" GridPane.columnIndex="4" GridPane.rowIndex="2"/>
            </GridPane>

            <Region minWidth="20"/>

            <!-- Add Products -->
            <HBox alignment="CENTER_LEFT" spacing="16">
                <Region minHeight="NaN"/>
                <Label text="Product:" styleClass="parts-table-label"/>
                <ComboBox fx:id="productComboBox" promptText="Select Product" maxWidth="650"/>

                <Label text="Quantity:" styleClass="parts-table-label"/>
                <TextField fx:id="productQuantityField" promptText="Quantity" maxWidth="100"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="addProductButton" text="Add Product" styleClass="create-product-button-refresh-button" alignment="CENTER_RIGHT" onAction="#addProductToTable"/>
                <Region minHeight="NaN"/>
            </HBox>

            <!-- Order Table -->
            <TableView fx:id="workOrderTableView" styleClass="parts-table" maxHeight="175">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn fx:id="colWorkOrderProductId" text="Product ID" styleClass="work-orders-table-cell" maxWidth="150"/>
                    <TableColumn fx:id="colWorkOrderProductName" text="Product Name" styleClass="work-orders-table-cell"/>
                    <TableColumn fx:id="colWorkOrderProductQuantity" text="Quantity" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn fx:id="colWorkOrderProductPrice" text="Price" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn fx:id="colWorkOrderProductTotal" text="Total" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn fx:id="colTrash" maxWidth="50"/>
                </columns>
            </TableView>

            <!-- Create Order Button -->

            <HBox alignment="CENTER" spacing="10">
                <Region minWidth="5"/>
                <Label text="Order Owner" styleClass="parts-table-title"/>
                <ComboBox fx:id="workOrderOwnerComboBox" promptText="Select Owner" maxWidth="600"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Label textAlignment="RIGHT" text="Total: " styleClass="parts-table-label"/>
                <Label fx:id="totalLabel" textAlignment="RIGHT" text="\$0.00" styleClass="parts-table-label"/>
                <Button fx:id="createWorkOrderButton" text="Create Order" disable="true" styleClass="create-product-button-refresh-button" onAction="#createWorkOrder"/>
                <Region minWidth="5"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>