<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.customer.EditCustomerController"
            prefHeight="400.0" prefWidth="600.0" styleClass="add-parts-popup">
    <top>
        <Region minHeight="20"/>
        <GridPane styleClass="parts-title-container">
            <columnConstraints>
                <ColumnConstraints percentWidth="70"/>
                <ColumnConstraints percentWidth="30"/>
            </columnConstraints>
            <Label text="View Customer" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" GridPane.halignment="RIGHT" onAction="#closePopup"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <VBox>
            <Region minHeight="5"/>

            <GridPane hgap="10" vgap="10" alignment="TOP_CENTER">
                <columnConstraints>
                    <ColumnConstraints minWidth="5" /> <!-- Padding Column -->
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints minWidth="5" /> <!-- Padding Column -->
                </columnConstraints>

                <Label text="Customer ID:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="customerIdLabel" styleClass="parts-table-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <Label text="First Name:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="firstNameLabel" text="First Name:" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="firstNameField" promptText="First Name" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <Label text="Last Name:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="lastNameLabel" text="Last Name:" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="lastNameField" promptText="Last Name" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <Label text="Email:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label fx:id="emailLabel" text="Email:" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <TextField fx:id="emailField" promptText="Email" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

                <Label text="Phone Number:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="phoneNumberLabel" text="Phone Number:" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <TextField fx:id="phoneNumberField" promptText="Phone Number" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

                <Label text="Billing Address:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label fx:id="billingAddressLabel" text="Billing Address:" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                <TextField fx:id="billingAddressField" promptText="Billing Address" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

                <Label text="Shipping Address:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label fx:id="shippingAddressLabel" text="Shipping Address:" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
                <TextField fx:id="shippingAddressField" promptText="Shipping Address" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="6"/>

                <Label text="Status:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                <Label fx:id="statusLabel" text="Status" GridPane.columnIndex="2" GridPane.rowIndex="7"/>
                <ComboBox fx:id="statusCombo" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="7">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Active" />
                            <String fx:value="Inactive" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </GridPane>

            <Region minHeight="5"/>

            <HBox alignment="CENTER" spacing="10">
                <Region minWidth="14"/>
                <Button fx:id="editButton" styleClass="create-product-button-refresh-button" text="Edit" onAction="#toggleEdit"/>
                <Button fx:id="saveButton" styleClass="create-product-button-refresh-button" text="Save" visible="false" onAction="#saveCustomer"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="deleteButton" styleClass="delete-button" text="Delete" onAction="#deleteCustomer"/>
                <Region minWidth="14"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>