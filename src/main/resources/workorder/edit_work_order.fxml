<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.workorder.EditWorkOrderController"
            prefHeight="800.0" prefWidth="900.0" styleClass="edit-work-order-popup">

    <top>
        <Region minHeight="20"/>
        <GridPane styleClass="work-order-title-container" hgap="345">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <Label text="Edit Work Order" styleClass="work-order-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" GridPane.halignment="RIGHT" onAction="#closePopup"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <VBox spacing="20">
            <Region minWidth="10"/>
            <GridPane hgap="10" vgap="20" alignment="CENTER" styleClass="work-order-grid-pane">
                <columnConstraints>
                    <ColumnConstraints percentWidth="2.5"/>
                    <ColumnConstraints percentWidth="23.75"/>
                    <ColumnConstraints percentWidth="23.75"/>
                    <ColumnConstraints percentWidth="23.75"/>
                    <ColumnConstraints percentWidth="23.75"/>
                    <ColumnConstraints percentWidth="2.5"/>
                </columnConstraints>

                <!-- Work Order Information -->
                <Label text="Work Order ID:" styleClass="work-order-table-label" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label fx:id="workOrderIdLabel" GridPane.rowIndex="0" GridPane.columnIndex="2"/>

                <Label text="Work Order Owner:" styleClass="work-order-table-label" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label fx:id="orderOwnerLabel" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <ComboBox fx:id="orderOwnerComboBox" promptText="Select Owner" maxWidth="700" GridPane.rowIndex="1" GridPane.columnIndex="2"/>

                <Label text="Customer:" styleClass="work-order-table-label" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label fx:id="customerLabel" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <ComboBox fx:id="customerComboBox" promptText="Select Customer" maxWidth="700" GridPane.rowIndex="2" GridPane.columnIndex="2"/>

                <Label text="Order Date:" styleClass="work-order-table-label" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label fx:id="orderDateLabel" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <DatePicker fx:id="orderDatePicker" editable="false" GridPane.rowIndex="3" GridPane.columnIndex="2"/>

                <Label text="Delivery Date:" styleClass="work-order-table-label" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label fx:id="deliveryDateLabel" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <DatePicker fx:id="deliveryDatePicker"  editable="false" GridPane.rowIndex="4" GridPane.columnIndex="2"/>

                <Label text="Shipping Address:" styleClass="work-order-table-label" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                <Label fx:id="shippingAddressLabel" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <TextField fx:id="shippingAddressField" editable="false" maxWidth="700" GridPane.rowIndex="0" GridPane.columnIndex="4"/>

                <Label text="Order Status:" styleClass="work-order-table-label" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
                <Label fx:id="orderStatusLabel" GridPane.rowIndex="1" GridPane.columnIndex="4"/>
                <TextField fx:id="statusField" editable="false" maxWidth="700" GridPane.rowIndex="1" GridPane.columnIndex="4"/>

                <Label text="Subtotal:" styleClass="work-order-table-label" GridPane.rowIndex="2" GridPane.columnIndex="3"/>
                <Label fx:id="subtotalLabel" GridPane.rowIndex="2" GridPane.columnIndex="4"/>
            </GridPane>

            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="editButton" text="Edit" onAction="#toggleEdit"/>
                <Button fx:id="saveButton" text="Save" onAction="#saveWorkOrder" visible="false"/>
                <Button fx:id="deleteButton" text="Delete" onAction="#deleteWorkOrder"/>
            </HBox>

            <!-- Work Order Products Table -->
            <TableView fx:id="workOrderProductsTableView" styleClass="work-order-table" maxHeight="175">
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn maxWidth="10"/>
                    <TableColumn fx:id="colProductId" text="Product ID" styleClass="work-orders-table-cell" maxWidth="150"/>
                    <TableColumn fx:id="colProductName" text="Product Name" styleClass="work-orders-table-cell"/>
                    <TableColumn fx:id="colQuantity" text="Quantity" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn fx:id="colPrice" text="Price" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn fx:id="colTotal" text="Total" styleClass="work-orders-table-cell-centered" maxWidth="100"/>
                    <TableColumn maxWidth="10"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>