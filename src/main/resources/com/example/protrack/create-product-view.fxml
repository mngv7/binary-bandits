<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.CreateProductController"
            prefHeight="360.0" prefWidth="900.0" styleClass="add-parts-popup">
    <top>
        <GridPane styleClass="parts-title-container" hgap="345">
            <Label text="Create Product" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" onAction="#onClosePopupButton" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="2" styleClass="close-button"/>
        </GridPane>
    </top>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER">
            <HBox spacing="20" styleClass="create-product-scrollpane" VBox.vgrow="ALWAYS">
                <VBox spacing="10" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                    <GridPane hgap="10" vgap="20" alignment="CENTER" styleClass="parts-grid-pane">
                        <Label text="Part Details" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.rowSpan="2"
                               GridPane.halignment="CENTER" GridPane.valignment="CENTER" styleClass="parts-table-title"/>
                        <Label text="Product ID:" GridPane.columnIndex="0" GridPane.rowIndex="2" styleClass="parts-table-label"/>
                        <TextField fx:id="productIdField" promptText="Product ID" maxWidth="500" styleClass="product-name-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        <Label text="Product Name:" GridPane.columnIndex="0" GridPane.rowIndex="3" styleClass="parts-table-label"/>
                        <TextField fx:id="productNameField" promptText="Product Name" maxWidth="500" styleClass="product-name-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                </VBox>

                <VBox spacing="10" maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="TOP_CENTER">
                    <Label text="Bill of Materials" styleClass="parts-table-title"/>
                    <HBox spacing="10">
                        <TextField fx:id="partIdSearchField" promptText="Part ID"/>
                        <Button fx:id="partSearchButton" text="Search" onAction="#partSearch" styleClass="create-product-button-small"/>
                    </HBox>
                    <VBox fx:id="partResultVBox" />
                    <VBox fx:id="removeAllPartsButtonContainer" spacing="10"/>
                </VBox>
                <HBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 10;">
                    <Button fx:id="createProductButton" text="Next" onAction="#onCreateProductButton" styleClass="create-product-button"/>
                </HBox>
            </HBox>
        </ScrollPane>
    </center>
</BorderPane>