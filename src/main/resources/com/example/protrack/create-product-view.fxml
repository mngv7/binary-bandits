<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.CreateProductController"
            prefHeight="360.0" prefWidth="900.0">
    <top>
        <GridPane styleClass="parts-title-container" hgap="165">
            <Label text="Create Product" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" onAction="#onClosePopupButton" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="2" styleClass="close-button"/>
        </GridPane>
    </top>
    <center>
        <HBox spacing="20">
            <VBox spacing="10" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <Label text="Product Details"/>
                <HBox spacing="10">
                    <Label text="Product ID:"/>
                    <TextField fx:id="productIdField" promptText="Product ID" maxWidth="500" styleClass="product-name-field"/>
                </HBox>
                <HBox spacing="10">
                    <Label text="Product Name:"/>
                    <TextField fx:id="productNameField" promptText="Product Name" maxWidth="500" styleClass="product-name-field"/>
                </HBox>
            </VBox>
            <VBox spacing="10" maxWidth="Infinity" HBox.hgrow="ALWAYS">
                <Label text="Bill of Materials"/>
                <HBox>
                    <TextField fx:id="partIdSearchField" promptText="Part ID"/>
                    <Button fx:id="partSearchButton" text="Search" onAction="#partSearch" styleClass="login-button"/>
                </HBox>
                <VBox fx:id="partResultVBox" />
                <!--
                <HBox>
                    <TextField fx:id="partId1" promptText="Part ID"/>
                    <TextField fx:id="requireAmount1" promptText="Required Amount"/>
                </HBox>
                <HBox>
                    <TextField fx:id="partId2" promptText="Part ID"/>
                    <TextField fx:id="requireAmount2" promptText="Required Amount"/>
                </HBox>
                <HBox>
                    <TextField fx:id="partId3" promptText="Part ID"/>
                    <TextField fx:id="requireAmount3" promptText="Required Amount"/>
                </HBox>
                -->
                <Button fx:id="createProductButton" text="Create Product" onAction="#onCreateProductButton" styleClass="login-button"/>
            </VBox>
        </HBox>
    </center>
</BorderPane>
