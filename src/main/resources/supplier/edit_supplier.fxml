<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.*?>

<?import java.lang.String?>
<?import com.sun.javafx.scene.control.IntegerField?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.supplier.EditSupplierController"
            prefHeight="400.0" prefWidth="600.0" styleClass="add-parts-popup">
    <top>
        <Region minHeight="20"/>
        <GridPane styleClass="parts-title-container">
            <columnConstraints>
                <ColumnConstraints percentWidth="70"/>
                <ColumnConstraints percentWidth="30"/>
            </columnConstraints>
            <Label text="View Supplier" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" styleClass="close-button" onAction="#closePopup"/>
        </GridPane>
    </top>

    <center>
        <VBox>
            <Region minHeight="5"/>

            <GridPane hgap="10" vgap="10" alignment="TOP_CENTER">
                <columnConstraints>
                    <ColumnConstraints minWidth="5" /> <!-- Padding Column -->
                    <ColumnConstraints/>
                    <ColumnConstraints/>
                    <ColumnConstraints minWidth="5" /> <!-- Padding Column -->
                </columnConstraints>

                <Label text="Supplier ID:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Label fx:id="supplierIdLabel" styleClass="parts-table-label" GridPane.columnIndex="2" GridPane.rowIndex="0"/>

                <Label text="Supplier Name:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label fx:id="nameLabel" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" promptText="Supplier Name" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

                <Label text="Email:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label fx:id="emailLabel" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <TextField fx:id="emailField" promptText="Email" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

                <Label text="Phone Number:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label fx:id="phoneNumberLabel" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <TextField fx:id="phoneNumberField" promptText="Phone Number" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

                <Label text="Billing Address:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Label fx:id="billingAddressLabel" GridPane.columnIndex="2" GridPane.rowIndex="4"/>
                <TextField fx:id="billingAddressField" promptText="Billing Address" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

                <Label text="Shipping Address:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                <Label fx:id="shippingAddressLabel" GridPane.columnIndex="2" GridPane.rowIndex="5"/>
                <TextField fx:id="shippingAddressField" promptText="Shipping Address" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="5"/>

                <Label text="Lead Time:" styleClass="parts-table-label" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                <Label fx:id="leadTimeLabel" GridPane.columnIndex="2" GridPane.rowIndex="6"/>
                <TextField fx:id="leadTimeField" GridPane.columnIndex="2" GridPane.rowIndex="6" visible="false"/>

            </GridPane>

            <Region minHeight="5"/>

            <HBox alignment="CENTER" spacing="10">
                <Region minWidth="14"/>
                <Button fx:id="editButton" styleClass="create-product-button-refresh-button" text="Edit" onAction="#toggleEdit"/>
                <Button fx:id="saveButton" styleClass="create-product-button-refresh-button" text="Save" visible="false" onAction="#saveSupplier"/>

                <Region HBox.hgrow="ALWAYS"/>

                <Button fx:id="deleteButton" styleClass="delete-button" text="Delete" onAction="#deleteSupplier"/>
                <Region minWidth="14"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
