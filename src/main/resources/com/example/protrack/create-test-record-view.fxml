<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.CreateTestRecordController"
            prefHeight="360.0" prefWidth="900.0" styleClass="add-parts-popup">

    <top>
        <GridPane styleClass="parts-title-container" hgap="355">
            <Label text="Test Records" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" onAction="#onClosePopupButton" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="2" styleClass="close-button"/>
        </GridPane>
    </top>

    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER">
            <VBox spacing="20" styleClass="create-product-scrollpane" VBox.vgrow="ALWAYS">
                <VBox spacing="10" maxWidth="Infinity" VBox.vgrow="ALWAYS">
                    <Label text="Create Test Record Steps" styleClass="parts-table-title"/>
                    <VBox fx:id="testRecordsVBox" spacing="10"/>

                    <HBox spacing="10">
                        <Button fx:id="addTestRecordButton" text="Add Additional test record" onAction="#addTestRecord" styleClass="create-product-button"/>
                        <VBox fx:id="removeAllTRButtonContainer" spacing="10"/>
                    </HBox>
                </VBox>
                <VBox alignment="BOTTOM_RIGHT" spacing="10" style="-fx-padding: 10;">
                    <Button fx:id="createProductButton" text="Create Product" onAction="#onCreateProductButton" styleClass="create-product-button"/>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
