<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.workorder.CreateWorkOrderController"
            prefHeight="800.0" prefWidth="900.0" styleClass="add-parts-popup">
    <top>
        <Region minHeight="20"/>
        <GridPane styleClass="parts-title-container" hgap="345">
            <columnConstraints>
                <ColumnConstraints percentWidth="50"/>
                <ColumnConstraints percentWidth="50"/>
            </columnConstraints>
            <Label text="Create Work Order" styleClass="parts-title-label" GridPane.rowIndex="0"/>
            <Button fx:id="closePopupButton" text="❌" GridPane.halignment="RIGHT"
                    GridPane.rowIndex="0" GridPane.rowSpan="2" GridPane.columnIndex="1" styleClass="close-button"/>
            <!-- onAction="#onClosePopupButton" -->
        </GridPane>
    </top>

    <center>
        <VBox>
            <GridPane hgap="10" vgap="20" alignment="CENTER" styleClass="parts-grid-pane">
                <columnConstraints>
                    <ColumnConstraints percentWidth="15"/>
                    <ColumnConstraints percentWidth="30"/>
                    <ColumnConstraints percentWidth="3"/>
                    <ColumnConstraints percentWidth="18"/>
                    <ColumnConstraints percentWidth="30"/>
                </columnConstraints>
                <Label text="Customer" GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="parts-table-title"/>

                <Label text="Name:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" promptText="Name" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Label text="Address:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <TextField fx:id="addressField" promptText="Home Address" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Label text="Email:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <TextField fx:id="emailField" promptText="Email" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Label text="Phone Number:" styleClass="parts-table-label" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                <TextField fx:id="phoneField" promptText="Phone Number" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                <Label text="Shipping" GridPane.columnIndex="3" GridPane.rowIndex="0" styleClass="parts-table-title"/>
                <Label text="Shipping Method:" styleClass="parts-table-label" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <TextField fx:id="shippingMethodField" promptText="Shipping Method" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
                <Label text="Shipping Address:" styleClass="parts-table-label" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <TextField fx:id="shippingAddressField" promptText="Name" maxWidth="700" styleClass="part-text-field" GridPane.columnIndex="4" GridPane.rowIndex="2"/>

                <Label text="Order" GridPane.columnIndex="0" GridPane.rowIndex="5" styleClass="parts-table-title"/>
            </GridPane>

            <TableView>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                </columnResizePolicy>

                <columns>
                    <TableColumn maxWidth="15"/>
                    <TableColumn fx:id="colWorkOrderProduct" text="Product ID"/>
                    <TableColumn fx:id="colWorkOrderProductName" text="Product Name"/>
                    <TableColumn fx:id="colWorkOrderProductDescription" text="Description"/>
                    <TableColumn fx:id="colWorkOrderProductQuantity" text="Quantity" />
                    <TableColumn fx:id="colWorkOrderProductPrice" text="Price"/>
                    <TableColumn fx:id="colWorkOrderTotal" text="Total"/>
                    <TableColumn fx:id="colTrash" maxWidth="30"/>
                </columns>
            </TableView>

            <HBox>
                <Label text="Order Owner"/>
                <Label text="Total: total"/>
                <Button fx:id="createWorkOrderButton" text="Create Order"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>