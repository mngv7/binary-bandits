<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.protrack.customer.CustomerController">
    <VBox spacing="10" alignment="CENTER">
        <Label text="Customers" styleClass="parts-title-label"/>

        <HBox spacing="10" alignment="CENTER">
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Add Customer"/>
            <Region minWidth="10"/>
        </HBox>

        <TableView fx:id="customersTableView">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>

            <columns>
                <TableColumn fx:id="customerIdColumn" text="ID" />
                <TableColumn fx:id="firstNameColumn" text="First Name" />
                <TableColumn fx:id="lastNameColumn" text="Last Name" />
                <TableColumn fx:id="emailColumn" text="Email" />
                <TableColumn fx:id="phoneNumberColumn" text="Phone Number" />
                <TableColumn fx:id="billingAddressColumn" text="Billing Address" />
                <TableColumn fx:id="shippingAddressColumn" text="Shipping Address" />
                <TableColumn fx:id="statusColumn" text="Status" />
            </columns>
        </TableView>
    </VBox>
</AnchorPane>