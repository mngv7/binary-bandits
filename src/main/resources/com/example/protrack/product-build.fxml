<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.ProductBuildController"
            prefHeight="500.0" prefWidth="500.0" styleClass="add-parts-popup" style="-fx-border-width: 0px;">
    <top>
        <GridPane styleClass="parts-title-container">
            <Label text="Product Build" styleClass="parts-title-label" GridPane.rowIndex="0"/>
        </GridPane>
    </top>
    <center>
        <HBox spacing="15" minHeight="435" styleClass="create-product-scrollpane" VBox.vgrow="ALWAYS">
            <!--Left side tab -->
            <ScrollPane minWidth="200" fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER">
                <VBox fx:id="productBuildVBox" minWidth="180">
                    <padding>
                        <Insets left="10"/>
                    </padding>
                </VBox>
            </ScrollPane>
            <!--Right side tab -->
            <VBox spacing="10">
                <Region/>
                <!--WS quantity -->
                <ScrollPane minWidth="680" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER" style="-fx-background-color: white; -fx-background: white;">
                    <VBox fx:id="PBWSRequirementBox" minWidth="660">
                        <TableView fx:id="PBWSRequirementTableView" styleClass="parts-table" maxHeight="135" minWidth="590.0">
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>

                            <columns>
                                <TableColumn fx:id="colPBWSpartId" text="Part ID" styleClass="work-orders-table-cell" minWidth="50"/>
                                <TableColumn fx:id="colPBWSpartName" text="Part Name" styleClass="work-orders-table-cell" minWidth="150"/>
                                <TableColumn fx:id="colPBWSreqAmt" text="Required" styleClass="work-orders-table-cell-centered"/>
                                <TableColumn fx:id="colWorkstationAmt" text="In Workstation" styleClass="work-orders-table-cell-centered"/>
                            </columns>
                        </TableView>
                    </VBox>
                </ScrollPane>
                <!--Test Records -->
                <ScrollPane fitToWidth="true" fitToHeight="true" styleClass="create-product-scrollpane" BorderPane.alignment="CENTER" style="-fx-background-color: white; -fx-background: white;">
                    <VBox fx:id="productBuildTRVBox"/>
                </ScrollPane>
            </VBox>
        </HBox>
    </center>
    <bottom>
        <HBox alignment="BOTTOM_CENTER" style="-fx-font-weight: bold; -fx-font-size: 18px;">
            <padding>
                <Insets top="25"/>
            </padding>
            <Button fx:id="commitButton" text="Complete Order Build" onAction="#onCommitButton" styleClass="create-product-button-refresh-button" />
        </HBox>
    </bottom>
</BorderPane>

