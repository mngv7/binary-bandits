<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.protrack.applicationpages.ExpandedEmployeeController"
            prefHeight="400.0" prefWidth="600.0">
    <top>

    </top>
    <center>
        <VBox spacing="20">
            <HBox spacing="10">
                <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="CENTER_LEFT">
                    <Button onAction="#backToEmployees" text="Back" styleClass="add-parts-button"/>
                </HBox>
                <HBox maxWidth="Infinity" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                    <Button fx:id="removeEmployeeButton" onAction="#onRemoveEmployeeButtonPress" text="Remove Employee" styleClass="remove-employee-button"/>
                </HBox>
            </HBox>
            <VBox style="-fx-padding: 0 0 10 0;">
                <Label fx:id="employeeNameTitle" text="Employee" styleClass="title-label"/>
            </VBox>
            <HBox spacing="20">
                <VBox HBox.hgrow="ALWAYS" spacing="20">
                    <Label fx:id="initialsIcon" text="Initials" styleClass="initials-icon-large"/>
                    <HBox>
                        <Label text="Employee ID: " styleClass="parts-table-label"/>
                        <Label fx:id="employeeIdLabel" text="ID" style="-fx-font-size: 16px;"/>
                    </HBox>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="10">
                    <Label text="Personal Details" styleClass="parts-table-title"/>

                    <Label text="Full Name" styleClass="parts-table-label"/>
                    <Label fx:id="fullName" text="Full Name" style="-fx-font-size: 16px;"/>

                    <Label text="Title" styleClass="parts-table-label"/>
                    <Label fx:id="employeeRole" text="Employee Role" style="-fx-font-size: 16px;"/>

                    <Label text="Email Address" styleClass="parts-table-label"/>
                    <Label fx:id="emailAddress" text="Email Address" style="-fx-font-size: 16px;"/>

                    <Label text="Date of Birth" styleClass="parts-table-label"/>
                    <Label fx:id="dob" text="DOB" style="-fx-font-size: 16px;"/>

                    <Label text="Phone Number" styleClass="parts-table-label"/>
                    <Label fx:id="phoneNo" text="Phone Number" style="-fx-font-size: 16px;"/>

                    <Label text="Gender" styleClass="parts-table-label"/>
                    <Label fx:id="gender" text="Gender" style="-fx-font-size: 16px;"/>
                </VBox>
                <VBox HBox.hgrow="ALWAYS" spacing="10">
                    <Label text="Work Insights" styleClass="parts-table-title"/>

                    <HBox spacing="10">
                        <Label text="Total Work Orders: " styleClass="parts-table-label"/>
                        <Label fx:id="totalWorkOrdersLabel" text="0" style="-fx-font-size: 16px;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Total Products Produced: " styleClass="parts-table-label"/>
                        <Label fx:id="totalProductsProducedLabel" text="0" style="-fx-font-size: 16px;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Total Parts Used: " styleClass="parts-table-label"/>
                        <Label fx:id="totalPartsUsedLabel" text="0" style="-fx-font-size: 16px;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="On-Schedule Rate: " styleClass="parts-table-label"/>
                        <Label fx:id="onScheduleRateLabel" text="0%" style="-fx-font-size: 16px;"/>
                    </HBox>

                    <HBox spacing="10">
                        <Label text="Total Production Cost: " styleClass="parts-table-label"/>
                        <Label fx:id="totalProductionCostLabel" text="0.00" style="-fx-font-size: 16px;"/>
                    </HBox>

                    <VBox>
                        <Label text="Orders By Status: " styleClass="parts-table-label"/>
                        <Label fx:id="ordersByStatusLabel" text="Not Available" style="-fx-font-size: 16px;"/>
                    </VBox>
                </VBox>

            </HBox>
        </VBox>
    </center>
</BorderPane>
